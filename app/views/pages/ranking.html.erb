<%= form_for @stance, :html => { :class => "ranking_form" } do |f| %>

<div class="alert alert-info">
	Please select the order in which you visited sources in the library from <strong>first</strong> to
	<strong>last</strong>.
</div>

<% @sources_used.each_with_index do |source, index| %>
	<input type="hidden" value="<%= source[1] %>"
		name="stance[rankings_attributes][<%= index %>][source_name]" />
<% end %>

<table class="table table-bordered">
	<thead>
		<tr>
			<th></th>
			<th>Rank the source you visited <strong>first</strong> as 1</th>
			<th>Please tell us what you remember about the author of each source.</th>
		</tr>
	</thead>
	<tbody>
		<% @sources_used.each_with_index do |source, index| %>
			<tr>
				<td><%= source[0] %></td>
				<td>
					<% (1..@sources_used.length).each do |i| %>
						<%= i %>
						<input type="radio" class="useful<%= i %>" value="<%= i %>"
							name="stance[rankings_attributes][<%= index %>][useful_ranking]" />
						&nbsp;&nbsp;
					<% end %>
				</td>
				<td>
					<input type="text"  class="form-control" placeholder="Please enter your reasoning" 
						name="stance[rankings_attributes][<%= index %>][useful_justification]" />
				</td>
			</tr>
		<% end %>

	</tbody>
</table>


<%= f.submit "I'm Finished!", :class => "btn btn-primary" %>

<% end %>
